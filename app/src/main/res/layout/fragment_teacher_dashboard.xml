<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="handler"
            type="com.example.chatapp.handler.TeacherDashboardClickHandler" />
        <variable
            name="teacherDashboardViewModel"
            type="com.example.chatapp.viewModel.TeacherDashboardClickViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.TeacherDashboardFragment"
        >


        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:id="@+id/recyclerViewList"
            android:padding="4dp"
            android:scrollbars="vertical"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>